<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="@dimen/_20dp"
    tools:context=".ui.homeScreen.HomeScreen"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200dp"
        android:src="@drawable/cocktails"
        android:layout_weight="1"
        android:contentDescription="@string/cocktail_photo"/>

    <TextView
        android:id="@+id/cocktail_name"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_weight="0"
        android:textStyle="bold"
        android:textSize="@dimen/_20sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/alcoholic"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:textSize="@dimen/_16sp"
        android:visibility="invisible"
        android:text="@string/ingredienti" />

    <TextView
        android:id="@+id/ingredients_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:text="" />

    <TextView
        android:id="@+id/recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_gravity="start"
        android:textSize="@dimen/_16sp"
        android:text="@string/procedimento" />

    <TextView
        android:id="@+id/recipe_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clicca"/>

</LinearLayout>
